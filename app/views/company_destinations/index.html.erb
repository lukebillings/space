        <% end %>
      </div>
      <div class="tags pt-2 pr-2 relative flex justify-end ...">
        <div class="company_logo">
          <% if company_destination.company.id == 3 %>
          <%= image_tag "VGAL-logo.png", class: "ml-4" %>
          <% elsif company_destination.company.id == 2  %>
          <%= image_tag "HALO_logo_darkbackground (1) copy 2.png", class: "ml-4 h-12"  %>
          <% end %>
        </div>
        <button class="m-2 ml-8 py-1 px-2 text-black bg-slate-100 font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
          <%= company_destination.destination.name %>
        </button>
      </div>
      <div class="info pt-5 pl-5 leading-8 ">
        <ul>
          <li> <%= company_destination.flight_name %></li>
          <li class="text-slate-400">Company: <%= company_destination.company.name %></li>
          <li class="text-slate-400"> Vehicle: <%= company_destination.vehicle %></li>
