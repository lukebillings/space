        <% elsif company_destination.id == 6 %>
        <!-- <%= image_tag "vgal_space.jpg", class: "w-screen h-40" %> -->
        <%= cl_image_tag("vnqstkrofgljg7orowgf.jpg", :cloud_name=>"dt0dvqoeb", :secure=>"true", :width=>500, :height=>310, :crop=>"fill")  %>
        <% elsif company_destination.id == 7 %>
