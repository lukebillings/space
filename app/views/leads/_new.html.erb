                rounded
                transition
                ease-in-out
                m-0
                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", style: "color:black;" }%>
            </div>
            <div class="form-group mb-2">
      <%= f.input :name, :label => 'Full name', input_html: { class: "form-input block
                mt-2
                w-full
                px-3
                py-1
                text-base
                font-normal
                text-gray-700
                bg-white bg-clip-padding
                border border-solid border-gray-300
                rounded
                transition
                ease-in-out
                m-0
                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", style: "color:black;" } %>
            </div>
            <div class="form-group mb-2">
  <%= f.input :date, :label => 'What year would you like to go', input_html: { class: "form-input block
                mt-2
                w-full
                px-3
                py-1
                text-base
                font-normal
                text-gray-700
                bg-white bg-clip-padding
                border border-solid border-gray-300
                rounded
                transition
                ease-in-out
                m-0
                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", style: "color:black;" }%>
            </div>

            <label for="exampleInputPassword1" class="form-label inline-block mb-2 text-white-700">Sign up for Spaceflight Index Newsletter?</label>
            <div class="form-group form-check mb-2">
              <%= f.input :newsletter, :label => 'Yes please', input_html: { class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" }%>
            </div>

