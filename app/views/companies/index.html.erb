<div class="pb-4 sticky top-0 bg-black">
  <div class="logo ml-20 mt-10">
    <%= link_to root_path, class: "m-2 py-2 px-4 bg-slate-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" do %>
      ðŸš€ Space Compare
    <% end %>
  </div>


    <%= simple_form_for :filters, url: companies_index_path, method: :get do |f| %>
      <div class="ml-10 mt-10 mr-10 flex flex-wrap justify-end ...">
        <%= f.input :destination, as: :select, label: false, collection:  Destination.all, include_blank: "ðŸ’« Destination", value_method: :id, onchange: "this.form.submit()", input_html: {class: "category-tag-filter filter-1 m-2 py-2 px-4 bg-slate-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" }, selected: params.dig(:filters, :destination)%>
        <%= f.input :vehicle, as: :select, label: false, collection:  ['Baloon', 'Plane', 'Rocket'], include_blank: "ðŸ›¸ Vehicle", onchange: "this.form.submit()", input_html: {class: "category-tag-filter filter-1 m-2 py-2 px-4 bg-slate-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" }, selected: params.dig(:filters, :vehicle)%>
